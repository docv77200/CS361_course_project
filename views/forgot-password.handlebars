<h1>Forgot Password</h1>
{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}
<form action="/forgot-password" method="POST">
    <input type="text" name="username" placeholder="Username" required>
    
    <label for="security-question">Select a Security Question:</label>
    <select name="securityQuestion" id="security-question">
        <option value="pet">What was your first pet's name?</option>
        <option value="middle-name">What's your middle name?</option>
        <option value="middle-school">Where did you attend middle school?</option>
    </select>

    <input type="text" name="securityAnswer" placeholder="Answer" required>
    <button type="submit">Submit</button>
</form>
