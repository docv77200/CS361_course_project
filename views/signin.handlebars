<h1>Sign In</h1>
{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}
<form action="/signin" method="POST">
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password" required>
    <button type="submit">Sign In</button>
</form>

<p>
    <small>
        Don't have an account? <a href="/profile">Create an account</a><br>

        <!-- Forgot Password with Tooltip -->
        <div class="forgot-password-container">
            <a href="/forgot-password" class="forgot-password-link">Reset it here</a>
            <span class="forgot-password-tooltip">Click to reset your password if you can't remember it</span>
        </div>
    </small>
</p>
