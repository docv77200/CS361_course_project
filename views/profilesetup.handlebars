<h1>Create an Account</h1>
{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}
<form action="/profile" method="POST">
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password" required>

    <label for="security-question">Select a Security Question:</label>
    <select name="securityQuestion" id="security-question" required>
        <option value="pet">What was your first pet's name?</option>
        <option value="middle-name">What's your middle name?</option>
        <option value="middle-school">Where did you attend middle school?</option>
    </select>

    <input type="text" name="securityAnswer" placeholder="Answer to selected question" required>

    <button type="submit">Create Account</button>
</form>

<p><a href="/">Already have an account? Sign in here.</a></p>
