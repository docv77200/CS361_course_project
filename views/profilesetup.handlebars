<h1>Create an Account</h1>
{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}
<form action="/profile" method="POST">
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password" required>

    <!-- City Selection -->
    <label for="city">Select Your City:</label>
    <select name="city" id="city" required>
        <option value="">Choose a city</option>
        <option value="Los Angeles">Los Angeles</option>
        <option value="Seattle">Seattle</option>
        <option value="Portland">Portland</option>
    </select>

    <!-- Interest Selection -->
    <label>Select Your Interests:</label>
    <div>
        <input type="checkbox" name="interests" value="outdoor"> Outdoor
        <input type="checkbox" name="interests" value="food & drink"> Food & Drink
        <input type="checkbox" name="interests" value="tourist attraction"> Tourist Attraction
        <input type="checkbox" name="interests" value="indoor"> Indoor
    </div>

    <label for="securityQuestion">Choose a Security Question:</label>
    <select name="securityQuestion" id="securityQuestion" required>
        <option value="firstPet">What was your first pet?</option>
        <option value="middleName">What is your middle name?</option>
        <option value="middleSchool">Where did you attend middle school?</option>
    </select>

    <input type="text" name="securityAnswer" placeholder="Answer" required>

    <button type="submit">Create Account</button>
</form>
