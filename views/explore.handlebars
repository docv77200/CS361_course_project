<h1>Explore Activities</h1>

<!-- View Bookmarked Activities Button -->
<button id="view-bookmarks-btn">View Bookmarked Activities</button>

<!-- Bookmark Modal -->
<div id="bookmark-modal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2>My Bookmarked Activities</h2>
        <ul id="bookmarked-list"></ul>
    </div>
</div>


<!-- Reviews Section -->
<div class="reviews-section">
    <button class="view-reviews-btn" data-id="{{this.id}}">View Reviews</button>
    <div class="reviews-container" id="reviews-{{this.id}}" style="display: none;">
        <h3>Reviews</h3>
        <ul class="reviews-list"></ul>
        
        <!-- Add Review Form -->
        <form class="review-form">
            <input type="hidden" name="activity_id" value="{{this.id}}">
            <input type="text" name="username" placeholder="Your Name" required>
            <select name="rating" required>
                <option value="5">★★★★★ (5 Stars)</option>
                <option value="4">★★★★☆ (4 Stars)</option>
                <option value="3">★★★☆☆ (3 Stars)</option>
                <option value="2">★★☆☆☆ (2 Stars)</option>
                <option value="1">★☆☆☆☆ (1 Star)</option>
            </select>
            <textarea name="comment" placeholder="Write your review..." required></textarea>
            <button type="submit">Submit Review</button>
        </form>
    </div>
</div>


<!-- Filter Form -->
<form id="filter-form">
    <label for="location">Location:</label>
    <input type="text" id="location" name="location" placeholder="Enter city">

    <label for="activity-type">Activity Type:</label>
    <select id="activity-type" name="activityType">
        <option value="outdoor">Outdoor</option>
        <option value="food & drink">Food & Drink</option>
        <option value="relaxation">Relaxation</option>
        <option value="tourist attraction">Tourist Attraction</option>
    </select>

    <label for="budget">Budget:</label>
    <select id="budget" name="budget">
        <option value="$0">$0</option>
        <option value="$10">$10</option>
        <option value="$20">$20</option>
        <option value="$30">$30</option>
    </select>

    <div class="filter-buttons">
        <button type="submit">Apply Filters</button>
        <button type="button" id="reset-filters">Reset Filters</button> <!-- New Reset Button -->
    </div>
</form>

<!-- Activities Display -->
<div id="activity-grid">
    {{#each activities}}
        <div class="activity-card" data-id="{{this.id}}">
            <h2>{{this.name}}</h2>
            <p>{{this.description}}</p>
            <p>Price: ${{this.price}}</p>
            <p>Distance: {{this.distance}} miles</p>
            <p>Type: {{this.type}}</p>
            <p>Time: {{this.time}}</p>
            <p>Date: {{this.date}}</p>
            <p>Location: {{this.location}}</p>

            <!-- Bookmark Button: Shows "Remove Bookmark" if already bookmarked -->
            <button class="bookmark-btn" data-id="{{this.id}}">
                {{#if ../user.bookmarkedActivities.[this.id]}}Remove Bookmark{{else}}Bookmark{{/if}}
            </button>
        </div>
    {{/each}}
</div>

<script src="/js/bookmarks.js"></script>
<script src="/js/filters.js"></script>
<script src="/js/reviews.js"></script>