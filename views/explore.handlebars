<h1>Explore Activities</h1>

<!-- View Bookmarked Activities Button -->
<button id="view-bookmarks-btn">View Bookmarked Activities</button>

<!-- Bookmark Modal -->
<div id="bookmark-modal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2>My Bookmarked Activities</h2>
        <ul id="bookmarked-list"></ul>
    </div>
</div>
<!-- üîç Open Filters Modal Button -->
<button id="open-filters-btn">üîç Filter Activities</button>
<button id="reset-filters-btn">Reset Filters</button>

<!-- üõ† Filters Modal -->
<div id="filters-modal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2>Filter Activities</h2>

        <!-- Location Filter -->
        <label for="location">Select Location:</label>
        <select id="location">
            <option value="">Any</option>
            <option value="Seattle">Seattle</option>
            <option value="Los Angeles">Los Angeles</option>
            <option value="New York">New York</option>
            <option value="Denver">Denver</option>
        </select>

        <!-- Activity Type Filter -->
        <label for="activity-type">Activity Type:</label>
        <select id="activity-type">
            <option value="">Any</option>
            <option value="outdoor">Outdoor</option>
            <option value="food & drink">Food & Drink</option>
            <option value="relaxation">Relaxation</option>
        </select>

        <!-- Budget Filter -->
        <label for="budget">Budget:</label>
        <select id="budget">
            <option value="">Any</option>
            <option value="$10">$10</option>
            <option value="$25">$25</option>
            <option value="$50">$50</option>
            <option value="$100">$100</option>
        </select>

        <!-- Apply Filter Button -->
        <button id="apply-filters-btn">Apply Filters</button>
    </div>
</div>

<!-- Activities Display -->
<div id="activity-grid">
    {{#if activities.length}}
        {{#each activities}}
            <div class="activity-card" data-id="{{this.id}}">
                <h2>{{this.name}}</h2>
                <p>{{this.description}}</p>
                <p>Price: ${{this.price}}</p>
                <p>Distance: {{this.distance}} miles</p>
                <p>Type: {{this.type}}</p>
                <p>Time: {{this.time}}</p>
                <p>Date: {{this.date}}</p>
                <p>Location: {{this.location}}</p>

                <!-- Star Rating System -->
                <div class="star-rating" data-id="{{this.id}}">
                    <span class="star" data-value="1">&#9733;</span>
                    <span class="star" data-value="2">&#9733;</span>
                    <span class="star" data-value="3">&#9733;</span>
                    <span class="star" data-value="4">&#9733;</span>
                    <span class="star" data-value="5">&#9733;</span>
                </div>

                <!-- Average Rating Display -->
                <p class="average-rating" id="avg-rating-{{this.id}}">Loading...</p>

                <!-- Bookmark Button -->
                <button class="bookmark-btn" data-id="{{this.id}}">
                    {{#if ../user.bookmarkedActivities.[this.id]}}Remove Bookmark{{else}}Bookmark{{/if}}
                </button>
            </div>
        {{/each}}
    {{else}}
        <p>No recommended activities available.</p>
    {{/if}}
</div>
<script src="/js/filters.js"></script>
<script src="/js/bookmarks.js"></script>
<script src="/js/reviews.js"></script>
